<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                app:cardPreventCornerOverlap="false"
                app:cardCornerRadius="35dp">


                <ImageView
                    android:id="@+id/d_img_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_da_person"
                    android:clickable="true"
                    android:scaleType="fitCenter"
                    tools:ignore="SpeakableTextPresentCheck" />


            </androidx.cardview.widget.CardView>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/d_tv_jobname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/jobtitle"
                android:paddingStart="5dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/d_tv_jobtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/tv_jobtype_vjob"
                android:paddingStart="5dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/d_bookmark"
                android:background="@android:color/transparent"
                android:id="@+id/d_img_bookmark"
                android:paddingRight="50dp"
                android:layout_gravity="right"/>

            <TextView
                android:id="@+id/d_tv_joblocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:hint="@string/d_tv_joblocation"
                android:paddingRight="50dp"
                android:textColor="@color/modern_blue"
                android:textSize="16sp" />








        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>