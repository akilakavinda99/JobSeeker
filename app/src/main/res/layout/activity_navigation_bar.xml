<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NavigationBarActivity">


    <Button
        android:id="@+id/nav_logout"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:text="@string/nav_logout"
        android:onClick="logout"
        android:visibility="gone"
        android:textAllCaps="false"
        android:textColor="@color/nav_logout"
        android:background="@drawable/button_red_border"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="40dp"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/Nav_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/border1"
        android:onClick="@string/Nav_login"
        android:text="@string/Nav_login"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:visibility="visible"
        app:backgroundTint="@color/nav_login"
        tools:ignore="OnClick" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:id="@+id/nav_home"
        android:onClick="navClickHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        tools:ignore="OnClick">

        <TextView
            android:id="@+id/nav_home_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/segoe_bold"
            android:padding="12dp"
            android:text="@string/nav_home_txt"
            android:textColor="@color/nav"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:onClick="navClickCreateJob"
        android:id="@+id/nav_createjob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        tools:ignore="OnClick">

        <TextView
            android:id="@+id/nav_createjob_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/segoe_bold"
            android:padding="12dp"
            android:text="@string/nav_createjob_txt"
            android:textColor="@color/nav"
            android:textSize="25dp"
            android:textStyle="bold" />

</LinearLayout>

    <LinearLayout
        android:onClick="navClickMyjobs"
        android:id="@+id/nav_Myjobs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:ignore="OnClick">

        <TextView
            android:id="@+id/nav_myjobs_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/segoe_bold"
            android:padding="12dp"
            android:text="@string/nav_myjobs_txt"
            android:textColor="@color/nav"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
    android:onClick="navClickRequestedjobs"
    android:id="@+id/nav_requestedjobs"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    tools:ignore="OnClick">

        <TextView
            android:id="@+id/nav_requestedjobs_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/segoe_bold"
            android:padding="12dp"
            android:text="@string/nav_requestedjobs_txt"
            android:textColor="@color/nav"
            android:textSize="25dp"
            android:textStyle="bold" />

</LinearLayout>
<LinearLayout
android:onClick="navClickMyreqjobs"
android:id="@+id/nav_myrequestedjobs"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:gravity="center_vertical"
    tools:ignore="OnClick">

    <TextView
        android:id="@+id/nav_myreqjobs_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:fontFamily="@font/segoe_bold"
        android:padding="12dp"
        android:text="@string/nav_myreqjobs_txt"
        android:textColor="@color/nav"
        android:textSize="25dp"
        android:textStyle="bold" />

</LinearLayout>
    <LinearLayout
        android:onClick="navClickSavedjobs"
        android:id="@+id/nav_myjobs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        tools:ignore="OnClick,UsingOnClickInXml">

        <TextView
            android:id="@+id/nav_savedjobs_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/segoe_bold"
            android:padding="12dp"
            android:text="@string/nav_savedjobs_txt"
            android:textColor="@color/nav"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp" />

    <LinearLayout

        android:onClick="navClickProfile"
        android:id="@+id/nav_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        tools:ignore="OnClick">

        <ImageView

            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/round_account_circle_20"
            tools:srcCompat="@drawable/round_account_circle_20" />

        <TextView
            android:id="@+id/nav_profile_txt"
            android:layout_width="289dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/segoe_bold"
            android:padding="12dp"
            android:text="@string/nav_profile_txt"
            android:textColor="@color/nav"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>