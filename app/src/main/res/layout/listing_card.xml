<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >

    <androidx.cardview.widget.CardView
        android:id="@+id/card_new"
        android:layout_width="188dp"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="0dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="4dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg2"
            android:padding="0dp">

            <ImageView
                android:id="@+id/job_img_box"
                android:layout_width="177dp"
                android:layout_height="107dp"
                android:layout_centerHorizontal="true"

                android:layout_marginBottom="80dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.333"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/companyname_box"
                android:layout_width="158dp"
                android:layout_height="22dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:text="The AirPix"
                android:textColor="@color/black01"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/job_img_box" />

            <TextView
                android:id="@+id/job_title_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Need Cinematographer"
                android:textSize="10dp"
                app:layout_constraintStart_toStartOf="@+id/companyname_box"
                app:layout_constraintTop_toBottomOf="@+id/companyname_box" />

            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7dp"
                android:layout_marginBottom="7dp"
                android:text="0774567518 |  âœ†"
                android:textSize="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


            <TextView
                android:id="@+id/type2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Part Time"
                android:textSize="8dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/number"
                app:layout_constraintStart_toStartOf="@+id/job_title_box" />

            <ProgressBar
                android:id="@+id/progressBar_listings_img"
                style="?android:attr/progressBarStyle"
                android:layout_width="36dp"
                android:layout_height="37dp"
                android:indeterminateDrawable="@drawable/progressbar"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/job_img_box"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/salary4"
                android:layout_width="65dp"
                android:layout_height="10dp"

                android:text="100000 LKR | MO"
                android:textAlignment="textEnd"
                android:textSize="8sp"
                app:layout_constraintBottom_toTopOf="@+id/number"
                app:layout_constraintEnd_toEndOf="@+id/number" />

            <TextView
                android:id="@+id/district3"
                android:layout_width="116dp"
                android:layout_height="11dp"

                android:text="Colombo"
                android:textAlignment="textEnd"
                android:textSize="8sp"
                app:layout_constraintBottom_toTopOf="@+id/salary4"
                app:layout_constraintEnd_toEndOf="@+id/salary4" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>