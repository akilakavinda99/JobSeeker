<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    android:visibility="visible"
    tools:context=".MyJobListings">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <include
            layout="@layout/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:visibility="visible" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <View
                android:id="@+id/viewre6"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="1dp"
                android:background="@color/black01"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_newreq"
                android:layout_width="119dp"
                android:layout_height="35dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/border2"
                android:clickable="true"
                android:hint="@string/btn_cn"
                android:paddingTop="1dp"
                android:textColorHint="#FFFFFF"
                app:backgroundTint="#477EEC"
                app:layout_constraintBottom_toTopOf="@+id/my_listing_recyclerview"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.945"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.666"
                android:focusable="true" />

            <TextView
                android:id="@+id/tv_mrjl"
                android:layout_width="208dp"
                android:layout_height="36dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="17dp"
                android:fontFamily="sans-serif-medium"
                android:hint="@string/tv_mjl1"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="28sp"
                app:layout_constraintEnd_toStartOf="@+id/btn_newreq"
                app:layout_constraintHorizontal_bias="0.849"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/my_listing_recyclerview"
                android:layout_width="379dp"
                android:layout_height="583dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_mrjl"
                app:layout_constraintVertical_bias="1.0" />

            <ProgressBar
                android:id="@+id/progressBar_listings_da"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateDrawable="@drawable/progressbar"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/my_listing_recyclerview"
                app:layout_constraintEnd_toEndOf="@+id/my_listing_recyclerview"
                app:layout_constraintHorizontal_bias="0.48"
                app:layout_constraintStart_toStartOf="@+id/my_listing_recyclerview"
                app:layout_constraintTop_toTopOf="@+id/my_listing_recyclerview"
                app:layout_constraintVertical_bias="0.348" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>