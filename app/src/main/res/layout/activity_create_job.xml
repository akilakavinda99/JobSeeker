<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".CreateJob">

    <TextView
        android:id="@+id/tv_createajob"
        android:layout_width="160dp"
        android:layout_height="41dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="64dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/tv_createajob"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#000000"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/et_company"
        app:layout_constraintEnd_toStartOf="@+id/imageView_cimg"
        app:layout_constraintStart_toEndOf="@+id/imageView_b1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView_cimg"
        android:layout_width="167dp"
        android:layout_height="152dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/et_company"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_createajob"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.666"
        app:srcCompat="@drawable/ll" />

    <ImageView
        android:id="@+id/imageView_b1"
        android:layout_width="23dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="52dp"
        app:layout_constraintBottom_toTopOf="@+id/et_company"
        app:layout_constraintEnd_toStartOf="@+id/tv_createajob"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/back"
        tools:ignore="VectorDrawableCompat" />

    <EditText
        android:id="@+id/et_company"
        android:layout_width="324dp"
        android:layout_height="39dp"
        android:layout_marginTop="132dp"
        android:background="@drawable/border2"
        android:ems="10"
        android:hint="@string/et_company"
        android:inputType="textPersonName"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColor="#FF4C4C4C"
        android:textColorHint="#FF4C4C4C"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_title"
        android:layout_width="324dp"
        android:layout_height="39dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/border2"
        android:ems="10"
        android:hint="@string/et_title"
        android:inputType="textPersonName"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColor="#FF4C4C4C"
        android:textColorHint="#3C3C3C"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_company" />

    <EditText
        android:id="@+id/et_salary"
        android:layout_width="324dp"
        android:layout_height="39dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/border2"
        android:ems="10"
        android:hint="@string/et_salary"
        android:inputType="number"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColor="#FF4C4C4C"
        android:textColorHint="#FF4C4C4C"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_title" />

    <Spinner
        android:id="@+id/et_jobtype"
        android:layout_width="324dp"
        android:layout_height="39dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/border2"
        android:entries="@array/job_type_sm"
        android:paddingStart="8dp"
        android:paddingTop="7dp"
        android:paddingEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_salary" />

    <Spinner
        android:id="@+id/et_dis"
        android:layout_width="324dp"
        android:layout_height="39dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/border2"
        android:entries="@array/districts_sm"
        android:paddingStart="8dp"
        android:paddingTop="7dp"
        android:paddingEnd="15dp"
        app:layout_constraintBottom_toTopOf="@+id/imageButton_addimage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_phone" />

    <EditText
        android:id="@+id/et_description"
        android:layout_width="324dp"
        android:layout_height="90dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/border2"
        android:ems="10"
        android:hint="@string/et_description"
        android:inputType="textPersonName"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingBottom="56dp"
        android:textColor="#FF4C4C4C"
        android:textColorHint="#FF4C4C4C"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_jobtype" />

    <ImageView
        android:id="@+id/imageView_jobtype"
        android:layout_width="14dp"
        android:layout_height="26dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/et_jobtype"
        app:layout_constraintEnd_toEndOf="@+id/et_jobtype"
        app:layout_constraintTop_toTopOf="@+id/et_jobtype"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/drop_down"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/imageView_dis"
        android:layout_width="14dp"
        android:layout_height="26dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/et_dis"
        app:layout_constraintEnd_toEndOf="@+id/et_dis"
        app:layout_constraintTop_toTopOf="@+id/et_dis"
        app:srcCompat="@drawable/drop_down"
        tools:ignore="VectorDrawableCompat" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="324dp"
        android:layout_height="39dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/border2"
        android:ems="10"
        android:hint="@string/et_email"
        android:inputType="textEmailAddress"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColor="#FF4C4C4C"
        android:textColorHint="#FF4C4C4C"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_description" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="324dp"
        android:layout_height="39dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/border2"
        android:ems="10"
        android:hint="@string/et_phone"
        android:inputType="phone"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColor="#FF4C4C4C"
        android:textColorHint="#FF4C4C4C"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_email" />

    <TextView
        android:id="@+id/tv_addimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="144dp"
        android:hint="@string/tv_addimg"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageButton_addimage"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_dis"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/imageButton_addimage"
        android:layout_width="101dp"
        android:layout_height="76dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_dis"
        app:srcCompat="@drawable/baseline_add_circle_24"
        tools:ignore="VectorDrawableCompat" />

    <Button
        android:id="@+id/btn_create"
        android:layout_width="112dp"
        android:layout_height="40dp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/border2"
        android:hint="@string/btn_create"
        android:paddingTop="0dp"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton_addimage" />

    <ProgressBar
        android:id="@+id/progressBar_cj"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton_addimage"
        app:layout_constraintEnd_toEndOf="@+id/imageButton_addimage"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="@+id/imageButton_addimage"
        app:layout_constraintTop_toTopOf="@+id/imageButton_addimage" />

</androidx.constraintlayout.widget.ConstraintLayout>